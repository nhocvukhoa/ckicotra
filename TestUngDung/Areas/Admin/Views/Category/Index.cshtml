@model PagedList.IPagedList<ModelEF.Model.Category>
@using PagedList.Mvc;
<link href="~/Content/PagedList1.css" rel="stylesheet"
      type="text/css" />
@{
    ViewBag.Title = "Quản trị danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản lý danh mục
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3" style="display: flex; justify-content:space-between; align-items:center;">
                <strong>Danh sách danh mục</strong>
                @Html.ActionLink("Tạo mới", "Create", "Category", new { @class = "btn btn-primary" })
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12 form-group" style="display: flex;">
                            <div class="col-md-4">
                                <input type="text" name="searchString" value="@ViewBag.SearchString"
                                       class="form-control"
                                       placeholder="Mời nhập..."
                                       style="width: 100%; padding: 10px 10px;" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success" style="border-radius: 10px;">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="text-center">
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th class="col-md-6">Miêu tả</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td class="text-center">
                                        @Html.ActionLink("Sửa", "Edit", "Category", new { @id = item.ID }, null) |
                                        @Ajax.ActionLink("Xóa", "Delete","Category", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa danh mục này?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>